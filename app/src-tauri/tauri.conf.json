{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "ArtBox",
	"version": "0.1.0",
	"identifier": "com.orange.vtp",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "bun dev",
		"beforeBuildCommand": "bun build"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "ArtBox",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; connect-src 'self' ipc: http://localhost:*",
			"assetProtocol": {
				"enable": true,
				"scope": ["**"]
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"resources": [
			"../../main.py",
			"../../requirements.txt"
		],
		"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
	}
}
